/* 
   use Surendar Yama Extension Pack.
*/
{
  "editor.fontFamily": "monaspace radon",
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "tailwindCSS.includeLanguages": {
    "plaintext": "html",
    "javascript": "javascript",
    "typescript": "typescript",
    "php": "php"
  },
  "tailwindCSS.experimental.classRegex": [
    ":\\s*?[\"'`]([^\"'`]*).*?,",
    ["classList.(?:add|remove)\\(([^)]*)\\)", "(?:'|\"|`)([^\"'`]*)(?:'|\"|`)"],
    "(?:const|let|var)\\s+[\\w$_][_\\w\\d]*\\s*=\\s*['\\\"](.*?)['\\\"]",
    [
      "(?:\\b(?:const|let|var)\\s+)?[\\w$_]*(?:[Ss]tyles|[Cc]lasses|[Cc]lassnames)[\\w\\d]*\\s*(?:=|\\+=)\\s*['\"]([^'\"]*)['\"]"
    ],
    ["Styles\\s*(?::\\s*[^=]+)?\\s*=\\s*([^;]*);", "['\"`]([^'\"`]*)['\"`]"],
    ["(?:twMerge|twJoin)\\(([^;]*)[\\);]", "[`'\"`]([^'\"`;]*)[`'\"`]"],
    ["twJoin\\(([^)]*)\\)", "[\"'`]([^\"'`]*)[\"'`]"]
  ],
  "typescript.tsserver.experimental.enableProjectDiagnostics": true,
  "tailwindCSS.emmetCompletions": true,
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "editor.minimap.enabled": false,
  "editor.lineHeight": 3.5,
  "editor.linkedEditing": true,
  "editor.cursorStyle": "block",
  "editor.fontSize": 13,
  "liveServer.settings.donotShowInfoMsg": true,
  "editor.fontLigatures": true,
  "git.autofetch": true,
  "security.workspace.trust.untrustedFiles": "open",
  "terminal.integrated.defaultProfile.linux": "bash",
  "workbench.startupEditor": "none",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "css.lint.unknownAtRules": "ignore",
  "window.zoomLevel": 1,
  "editor.guides.bracketPairs": true,
  "workbench.sideBar.location": "right",
  "terminal.integrated.lineHeight": 1.8,
  "terminal.integrated.fontSize": 13,
  "files.autoSave": "afterDelay",
  "update.mode": "manual",
  "vscode_custom_css.imports": [
    "file:///C:/Users/suren/Desktop/Codebase/personal/css-and-js-loader/custom.css"
  ],
  "workbench.colorTheme": "One Dark Pro",
  "editor.stickyScroll.enabled": false,
  "git.openRepositoryInParentFolders": "never",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.iconTheme": "vscode-jetbrains-icon-theme",
  "chat.agent.enabled": true,
  "svelte.enable-ts-plugin": true
}
